@model IEnumerable<CandidateProject.ViewModels.CartonViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CartonNumber)
          
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*AM: TODO ENHANCEMENTS 1 - Display the # of pieces of equipment on the carton - DONE*@
                @Html.DisplayFor(modelItem => item.CartonNumber)  (No of pieces of equipments present in Carton : @item.NoofEquipment )
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @if (!item.AtCapacity)
                {
                    <span>
                        @Html.ActionLink("AddEquipment", "AddEquipment", new { id = item.Id }) |
                    </span>
                }
                @Html.ActionLink("ViewCartonEquipment", "ViewCartonEquipment", new { id = item.Id }) |
                @Html.ActionLink("Remove All Carton Equipment", "RemoveAllEquipment", new { id = item.Id })
            </td>
        </tr>
    }

</table>
